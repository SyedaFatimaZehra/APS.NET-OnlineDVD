<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Music</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="assets/images/favicon.ico">

    <!-- CSS
    ========================= -->
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/User/assets/css/bootstrap.min.css">

    <!-- Fonts CSS -->
    <link rel="stylesheet" href="~/User/assets/css/material-design-iconic-font.min.css">

    <!-- Plugins CSS -->
    <link rel="stylesheet" href="~/User/assets/css/plugins.css">

    <!-- Main Style CSS -->
    <link rel="stylesheet" href="~/User/assets/css/style.css">

    <!-- Modernizer JS -->
    <script src="~/User/assets/js/vendor/modernizr-3.6.0.min.js"></script>

    <style>
        .logo {
            text-align: center;
            font-family: "Poppins", sans-serif;
            font-weight: 700;
            font-size: 40px;
            text-transform: uppercase;
            color: #fff;
            padding: 10px;
        }

            .logo h1 {
                margin: 0;
                font-size: 42px;
                letter-spacing: 2px;
                font-weight: 800;
                background: linear-gradient(90deg, #ff4b2b, #ff416c);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            }

                .logo h1 span {
                    color: #ffcc00;
                    font-weight: 900;
                    text-shadow: 2px 2px 5px rgba(255, 204, 0, 0.7);
                }

            .logo:hover h1 {
                transition: all 0.3s ease-in-out;
            }

    </style>
</head>
<body>
    <!-- Main Wrapper Start -->
    <div class="main-wrapper">
        <!-- header area start -->
        <header class="header-area bg-black section-padding-lr">
            <div class="container-fluid">
                <div class="header-wrap header-netflix-style">
                    <div class="logo-menu-wrap">
                        <!-- Logo -->
                        <div class="logo">
                            <a href="@Url.Action("Index")"><img src="~/logo/music.png" alt="DVD World Logo" width="100" height="100"></a>
                            @* <h1>DVD <span>WORLD</span></h1> *@
                        </div>
                        <!-- Logo -->
                        <div class="main-menu main-theme-color-four">
                            <nav class="main-navigation">
                                <ul>
                                    <li class="active"><a href="@Url.Action("Index")">Home</a></li>
                                    <li><a href="@Url.Action("About")">About</a></li>
                                        
                                    <li>
                                        <a href="#">Movies</a>
                                        <ul class="sub-menu">
                                            <li><a href="@Url.Action("AllMovies")">Movies</a></li>
                                            <li><a href="@Url.Action("AllMovieTrailers")">Movie Trailers</a></li>
                                        </ul>
                                    </li>   
                                    <li>
                                        <a href="#">Games</a>
                                        <ul class="sub-menu">
                                            <li><a href="@Url.Action("AllGames")">Games</a></li>
                                            <li><a href="@Url.Action("AllGameTrailers")">Game Trailers</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Shop")">Shop</a>                                      
                                    </li>
                                    <li>
                                        <a href="@Url.Action("AllAdvertisements")">Ads</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("AllNews")">News</a>
                                    </li>
                                
                                    <li><a href="@Url.Action("Contact")">Contact</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="right-side d-flex">
                        @using Microsoft.AspNetCore.Http
                        @inject IHttpContextAccessor HttpContextAccessor

                        @{
                            var fullName = HttpContextAccessor.HttpContext.Session.GetString("FullName");
                            var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
                            var adminImage = HttpContextAccessor.HttpContext.Session.GetString("UserImage") ?? "default-avatar.jpg";
                        }
                        <!-- search-input-box start -->
@*                         <div class="header-search-2">
                            <a class="search-toggle" href="#">
                                <i class="zmdi zmdi-search s-open"></i>
                                <i class="zmdi zmdi-close s-close"></i>
                            </a>
                            <div class="search-wrap-2">
                                <form action="#">
                                    <input placeholder="Search" type="text">
                                    <button class="button-search"><i class="zmdi zmdi-search"></i></button>
                                </form>
                            </div>
                        </div> *@
                        <!-- search-input-box end -->
                        <!-- notifications start -->
                      @*   <div class="notifications-bar btn-group">
                            <a href="#" class="notifications-iocn white" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="zmdi zmdi-notifications"></i> <span>5</span>
                            </a>
                            <div class="dropdown-menu netflix-notifications-style red">
                                <h5>Notifications</h5>
                                <ul>
                                    <li class="single-notifications">
                                        <a href="#">
                                            <span class="image"><img src="assets/images/review/author-01.png" alt=""></span>
                                            <span class="notific-contents">
                                                <span>Lorem ipsum dolor sit amet consectetur.</span>
                                                <span class="time">21 hours ago</span>
                                            </span>

                                        </a>
                                    </li>
                                    <li class="single-notifications">
                                        <a href="#">
                                            <span class="image"><img src="assets/images/review/author-01.png" alt=""></span>
                                            <span class="notific-contents">
                                                <span>Lorem ipsum dolor sit amet consectetur.</span>
                                                <span class="time">21 hours ago</span>
                                            </span>

                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div> *@
                        <!-- notifications end -->
                        


                        @if (!string.IsNullOrEmpty(username))
                        {
                            <div class="our-profile-area">
                                <a href="#" class="our-profile-pc" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img src="~/@adminImage" width="50" height="50" class="rounded-circle" alt="Admin Image">
                                </a>
                                <div class="dropdown-menu netflix-profile-style red">
                                    <ul>
                                        <li class="single-list"><a href="#">@fullName</a></li>
                                        <li class="single-list"><a href="@Url.Action("MyAccount", "User")">Manage Account</a></li>
                                        <li class="single-list"><a href="@Url.Action("UserLogout", "User")">Log Out</a></li>
                                    </ul>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- User is not logged in, show Login Button -->
                            <div class="subscribe-btn-wrap">
                                <a href="@Url.Action("UserLogin")" class="subscribe-btn">Login</a>
                            </div>
                        }
                        <!-- mobile-menu start -->
                        <div class="mobile-menu d-block d-lg-none"></div>
                        <!-- mobile-menu end -->
                    </div>
                </div>
            </div>
        </header>
   
        
        <div>
        @RenderBody()
    </div>

