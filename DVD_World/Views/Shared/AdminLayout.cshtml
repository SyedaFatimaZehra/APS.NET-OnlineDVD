    <!-- Admin Profile Update Modal -->
    <div class="modal fade" id="updateProfile" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Profile</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <form asp-action="EditProfile" asp-controller="Admin" method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" name="Id" value="@Context.Session.GetInt32("AdminId")" />

                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" class="form-control" name="FullName" value="@Context.Session.GetString("AdminName")" required />
                        </div>

                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" name="Username" value="@Context.Session.GetString("AdminUsername")" required />
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" name="Email" value="@Context.Session.GetString("AdminEmail")" required />
                        </div>

                        <div class="form-group">
                            <label>Password (Leave blank to keep current password)</label>
                            <input type="password" class="form-control" name="Password" />
                        </div>

                        <div class="form-group">
                            <label>Upload Profile Image</label>
                            <input type="file" class="form-control" name="ProfileImage" />
                            <small class="form-text text-muted">Leave empty to keep the current image.</small>
                        </div>

                        @if (!string.IsNullOrEmpty(Context.Session.GetString("AdminImage")))
                        {
                            <div class="form-group">
                                <label>Current Profile Image</label>
                                <br />
                                <img src="~/@Context.Session.GetString("AdminImage")" alt="Profile Image" class="img-thumbnail" style="max-width: 150px;">
                            </div>
                        }
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


