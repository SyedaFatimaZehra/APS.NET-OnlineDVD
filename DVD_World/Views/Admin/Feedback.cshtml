@using DVD_World.Models;
@model List<Feedback>

<link href="~/Admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">User Feedback</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Feedback List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th>Profile Image</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Message</th>
                            <th>Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var feedback in Model)
                        {
                            <tr class="text-center">
                                <td>
                                    <img src="~/@feedback.User?.Image" class="rounded" alt="User Image" width="50" height="50">
                                </td>
                                <td>@feedback.User?.Username</td>
                                <td>@feedback.User?.Email</td>
                                <td>@feedback.Message</td>
                                <td>
                                    @for (int i = 0; i < feedback.Rating; i++)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    @for (int i = feedback.Rating; i < 5; i++)
                                    {
                                        <i class="far fa-star text-muted"></i>
                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        setTimeout(function () {
            $(".alert").fadeOut("slow");
        }, 5000);
    });
</script>
