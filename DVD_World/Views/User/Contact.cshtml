@{
    Layout = "UserLayout";
}

<div class="breadcrumb-area breadcrumb-modify-padding bg-black-3">
    <div class="container">
        <div class="in-breadcrumb">
            <div class="row">
                <div class="col">
                    <div class="breadcrumb-style-2 center">
                        <h2>Contact Us</h2>
                        <ul class="breadcrumb-list-2 black">
                            <li><a href="index-4.html">Home</a></li>
                            <li>Contact Us</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="contact-us-area bg-black section-pt-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact-form-wrap section-pb-90">
                    @if (TempData["Success"] != null)
                    {
                        <script>
                            alert("@TempData["Success"]");
                        </script>

                    }

                    @if (TempData["Error"] != null)
                    {
                        <script>
                            alert("@TempData["Error"]");
                        </script>
                    }
                    <form id="contact-form" asp-action="Contact" asp-controller="User" method="post">
                        <div class="contact-page-form">
                            <div class="row contact-input">
                                <div class="col-lg-6 col-md-6 contact-inner black">
                                    <input name="FirstName" type="text" placeholder="First Name" id="first-name" required>
                                </div>
                                <div class="col-lg-6 col-md-6 contact-inner black">
                                    <input name="LastName" type="text" placeholder="Last Name" id="last-name" required>
                                </div>
                                <div class="col-lg-6 col-md-6 contact-inner black">
                                    <input type="email" name="Email" placeholder="Enter Your E-mail" id="email" required>
                                </div>
                                <div class="col-lg-6 col-md-6 contact-inner black">
                                    <input name="Subject" type="text" placeholder="Subject" id="subject" required>
                                </div>
                                <div class="col-lg-12 col-md-12 contact-inner black contact-message">
                                    <textarea name="Message" placeholder="Message" style="resize: none;" required></textarea>
                                </div>
                            </div>
                            <div class="contact-submit-btn text-center">
                                <button class="submit-btn">Send Message</button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="map-wrapper relative">
        <div class="gogle_map">
            <div id="googleMap"></div>
        </div>
        <div class="contact-info-area bg-black-2">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 ms-auto">
                        <div class="contact-info-inner black">
                            <div class="single-contact-info">
                                <div class="contact-info-icon">
                                    <i class="zmdi zmdi-home"></i>
                                </div>
                                <div class="contact-info-text">
                                    <p> DVD World Headquarters <br> 123 Movie Street, Los Angeles, CA, USA </p>
                                </div>
                            </div>

                            <div class="single-contact-info">
                                <div class="contact-info-icon">
                                    <i class="zmdi zmdi-phone"></i>
                                </div>
                                <div class="contact-info-text">
                                    <p> <a href="#">+1 800 555 6789</a> <a href="#">+1 310 123 4567</a> </p>
                                </div>
                            </div>

                            <div class="single-contact-info">
                                <div class="contact-info-icon">
                                    <i class="zmdi zmdi-email"></i>
                                </div>
                                <div class="contact-info-text">
                                    <p><a href="mailto:support@dvdworld.com">support@dvdworld.com</a> <a href="mailto:info@dvdworld.com">info@dvdworld.com</a> </p>
                                </div>
                            </div>

                            <div class="single-contact-info">
                                <div class="contact-info-icon">
                                    <i class="zmdi zmdi-globe-alt"></i>
                                </div>
                                <div class="contact-info-text">
                                    <p> <a href="https://www.dvdworld.com">www.dvdworld.com</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>